<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F474D"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WanderSync"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:gravity="center"/>
    <TextView
        android:id="@+id/welcome_compay_motto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Your Adventure"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_company_name"
        android:gravity="center"/>
    <Button
        android:id="@+id/welcome_enter"
        android:layout_width="300dp"
        android:backgroundTint="#432b4a"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Enter"
        app:layout_constraintTop_toBottomOf="@+id/welcome_company_motto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/welcome_close"
        android:layout_width="300dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintTop_toBottomOf="@+id/welcome_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        />

</LinearLayout>