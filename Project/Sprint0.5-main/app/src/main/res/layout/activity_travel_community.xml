<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.TravelCommunityActivity"
    android:background="#4F474D"> <!-- Set background color -->

    <!-- Include header layout -->
    <include layout="@layout/header"/>

    <!-- Include bottom navigation layout -->
    <include layout="@layout/bottom_navigation" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp"/>

    <!-- RecyclerView to display the list of items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/add_post"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/initial_travel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is where you and your friends' posts will appear!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="50dp"/>


    <Button
        android:id="@+id/button_view_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upadate List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866"
        app:layout_goneMarginLeft="16dp"/>


    <!-- New Post Overlay FrameLayout (Hidden Initially) -->
    <FrameLayout
        android:id="@+id/travel_post_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Post Linear Layout -->
        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:elevation="10dp">

            <!-- Overlay Title -->
            <TextView
                android:id="@+id/overlay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Travel Post"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Location Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <!-- Location Spinner -->
            <Spinner
                android:id="@+id/destination_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>


            <!-- Travel Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <!-- Travel Input -->
            <EditText
                android:id="@+id/travel_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter form of Travel used"
                android:background="@android:color/darker_gray"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Note Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <!-- Note Input -->
            <EditText
                android:id="@+id/notes_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes about your trip"
                android:background="@android:color/darker_gray"
                android:padding="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Submit Button -->
            <Button
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Add Post Button (Floating Action Button) -->
    <Button
        android:id="@+id/add_post"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="+"
        android:textSize="24sp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- FrameLayout that will hold the popup -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- The Popup Window layout -->
        <LinearLayout
            android:id="@+id/itineraryPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/popup_background"
            android:padding="16dp"
            android:layout_gravity="center">

            <!-- Travel Itinerary Details -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username's trip to Destination"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username will be staying for X days"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/startEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StartDate to EndDate"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/accommodation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username will be staying at accomodation"
                android:textSize="18sp"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/diningReservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username reserved reservation at dining"
                android:textSize="18sp"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travelling via: transportation"
                android:gravity="right"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\'note\'"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <!-- Close Button -->
            <Button
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_gravity="center"/>

        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>