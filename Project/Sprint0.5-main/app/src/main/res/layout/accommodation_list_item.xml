<!-- accommodation_list_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/location_name"
    android:text="Location"
    android:textSize="16sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/accommodation_name"
    android:text="Accommodation Name"
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/checkin_date"
    android:text="Check-in Date"
    android:textSize="12sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/checkout_date"
    android:text="Check-out Date"
    android:textSize="12sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/num_rooms"
    android:text="Number of Rooms"
    android:textSize="12sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/room_types"
    android:text="Room Types"
    android:textSize="12sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</LinearLayout>
