<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AccommodationsActivity"
    android:background="#4F474D">

    <include layout="@layout/header"/>
    <include layout="@layout/bottom_navigation" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accommodations"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp"/>

    <!-- Frame for adding new accommodation -->
    <FrameLayout
        android:id="@+id/accommodations_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:elevation="10dp">

            <!-- Accommodation Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accommodation Name: "
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter accommodation name"
                android:background="@android:color/darker_gray"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In: "
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/checkin_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter check-in"
                android:inputType="date"
                android:background="@android:color/darker_gray"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out: "
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/checkout_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter check-out"
                android:inputType="date"
                android:background="@android:color/darker_gray"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:spinnerMode="dropdown"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Rooms: "
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/number_of_rooms_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:spinnerMode="dropdown"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type: "
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/room_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:spinnerMode="dropdown"
                android:background="@android:color/darker_gray"/>

            <Button
                android:id="@+id/submit_accommodation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Accommodation"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Button to add accommodation -->
    <Button
        android:id="@+id/add_accommodation"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="+"
        android:textSize="24sp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- ListView for displaying accommodations -->
    <ListView
        android:id="@+id/accommodation_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintBottom_toTopOf="@+id/add_accommodation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:elevation="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>